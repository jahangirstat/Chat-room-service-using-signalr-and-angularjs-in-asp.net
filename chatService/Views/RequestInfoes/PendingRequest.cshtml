@model IEnumerable<chatService.Models.RequestInfo>

@{
    ViewBag.Title = "Chat Room Add Request";
}
<div style="background-color: #277571;height: 300px;color: #092b29;font-size: 14pt;text-align: center;">
    <h2 style="font-size: 30px;
    color: #2896d1;
    margin-top: 0px;">Chat Room Add Request Details</h2>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GroupName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReqDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Approved)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.GroupName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReqDateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Approved)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id })  &raquo;
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>